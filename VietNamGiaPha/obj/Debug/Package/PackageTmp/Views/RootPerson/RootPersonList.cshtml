@{
    ViewData["Title"] = "RootPersonList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="contact-content">
    <div class="container-fluid">
        <div class="col-md-12 slideInUp" data-wow-delay=".6s">
            <h2 class="title title-2 cl-gold">
                <span class="title-heading">Thành viên gia đình</span>
                <span class="bot-title">
                </span>
            </h2>
        </div>

        <div class="col-12 col-sm-12 col-md-12">
            <div class="container">
                <div class="row">
                    <div id="myGrid" style="width:100%;height:500px;float:right;"></div>
                </div>
            </div>
        </div>
    </div>
</section>

<div id="headerGrid" style="visibility:hidden">
    <div class="row my-header-grid">
        <div class="col-12 col-md-3 col-sm-3 col-lg-3">
            <div>
                <span class="fa fa-list"></span>&nbsp;Danh sách thành viên
            </div>
        </div>
        <div class="col-12 col-md-5 col-sm-5 col-lg-5" style="float:right;text-align:right;">
            <input id="searches" class="my-input" style="height:35px;" type="text" placeholder="Search" aria-label="Search" onkeypress="return pressEnterSearch(event)">
            <button class="btn btn-primary my-btn-in-grid"><span class="fa fa-search"></span>Tìm kiếm</button>
            <button class="btn btn-danger my-btn-in-grid" onclick="btnExportToExcel();">Xuất Excel</button>
        </div>
        <div class"col-12 col-md-4 col-sm-4 col-lg-4">
            <ul class="pagination-sm paginationPersonList" style="list-style:auto !important;"></ul>
        </div>
    </div>
</div>